            { id: 117, s: 'Plumber', c: 'Pipe Work', t: 'Blockage', sub: 'Main Line Sewerage Clog', p: 1499 },
            { id: 118, s: 'Plumber', c: 'Pipe Work', t: 'Drill', sub: 'Bathroom Accessory Drill (Set of 3)', p: 199 }
        ];

        let cart = [];
        let currentSvc = 'Electrician';
        let currentCat = '';
        let isHindi = false;

        function showSection(id) {
            ['hero', 'services', 'partner'].forEach(s => {
                document.getElementById('sec-' + s).classList.add('section-hide');
            });
            document.getElementById('sec-' + id).classList.remove('section-hide');
            window.scrollTo(0,0);
        }

        function setMainService(s) {
            currentSvc = s;
            document.getElementById('btn-elec').className = s === 'Electrician' ? 'active-tab flex-1 py-4 rounded-xl text-xs font-black uppercase tracking-widest' : 'flex-1 py-4 rounded-xl text-xs font-black uppercase tracking-widest text-slate-400';
            document.getElementById('btn-plumb').className = s === 'Plumber' ? 'active-tab flex-1 py-4 rounded-xl text-xs font-black uppercase tracking-widest' : 'flex-1 py-4 rounded-xl text-xs font-black uppercase tracking-widest text-slate-400';
            const cats = [...new Set(db.filter(x => x.s === s).map(x => x.c))];
            currentCat = cats[0];
            renderCatBar(cats);
            renderGrid();
        }

        function renderCatBar(cats) {
            const bar = document.getElementById('category-bar');
            bar.innerHTML = cats.map(c => `<button onclick="setSubCat('${c}')" class="category-pill whitespace-nowrap px-6 py-2 rounded-full text-[10px] font-black uppercase border border-slate-200 transition-all ${currentCat === c ? 'active-cat' : 'bg-white text-slate-400'}">${c}</button>`).join('');
        }

        function setSubCat(c) {
            currentCat = c;
            setMainService(currentSvc);
        }

        function renderGrid() {
            const grid = document.getElementById('service-grid');
            const items = db.filter(x => x.s === currentSvc && x.c === currentCat);
            grid.innerHTML = items.map(i => {
                const isSelected = cart.some(c => c.id === i.id);
                return `<div onclick="toggleCart(${i.id})" class="bg-white p-5 rounded-[2rem] border-2 cursor-pointer transition-all ${isSelected ? 'item-selected shadow-inner' : 'border-transparent shadow-sm hover:border-slate-200'}">
                    <p class="text-[8px] font-black text-slate-400 uppercase mb-1 italic">${i.t}</p>
                    <p class="text-sm font-extrabold text-navy mb-4 h-10 leading-tight">${i.sub}</p>
                    <div class="flex justify-between items-center">
                        <p class="font-black text-2xl">‚Çπ${i.p}</p>
                        <span class="text-[9px] font-black uppercase ${isSelected ? 'text-teal-600' : 'text-slate-300'}">${isSelected ? '‚úì Added' : 'Add +'}</span>
                    </div>
                </div>`;
            }).join('');
        }

        function toggleCart(id) {
            const idx = cart.findIndex(c => c.id === id);
            if(idx > -1) cart.splice(idx, 1);
            else cart.push(db.find(x => x.id === id));
            updateUI();
            renderGrid();
        }

        function updateUI() {
            const list = document.getElementById('cart-list');
            const totalDisplay = document.getElementById('total-val');
            const bookBtn = document.getElementById('book-trigger');
            if(cart.length === 0) {
                list.innerHTML = `<p class="text-slate-300 italic text-sm text-center py-10">Choose services</p>`;
                totalDisplay.innerText = '‚Çπ0';
                bookBtn.disabled = true;
                bookBtn.className = "w-full py-5 bg-slate-100 text-slate-400 rounded-2xl font-black uppercase text-xs";
            } else {
                list.innerHTML = cart.map(i => `<div class="flex justify-between items-center bg-slate-50 p-3 rounded-2xl border"><p class="text-[10px] font-black truncate">${i.sub}</p><p class="text-xs font-black">‚Çπ${i.p}</p></div>`).join('');
                const total = cart.reduce((acc, curr) => acc + curr.p, 0);
                totalDisplay.innerText = '‚Çπ' + total;
                document.getElementById('form-order-data').value = `Total: ‚Çπ${total} | Items: ${cart.map(c => c.sub).join(', ')}`;
                bookBtn.disabled = false;
                bookBtn.className = "w-full py-5 bg-teal-500 text-navy rounded-2xl font-black uppercase text-xs shadow-lg cursor-pointer";
            }
        }

        function toggleServiceView(v) {
            document.getElementById('selection-view').classList.toggle('section-hide', v === 'booking');
            document.getElementById('booking-view').classList.toggle('section-hide', v === 'selection');
            window.scrollTo(0,0);
        }

        function toggleBookingLang() {
            isHindi = !isHindi;
            const btn = document.getElementById('lang-btn');
            btn.innerText = isHindi ? "English ‡§Æ‡•á‡§Ç ‡§¶‡•á‡§ñ‡•á‡§Ç" : "Translate to Hindi";
            document.getElementById('f-name').placeholder = isHindi ? "‡§Ü‡§™‡§ï‡§æ ‡§™‡•Ç‡§∞‡§æ ‡§®‡§æ‡§Æ" : "Full Name";
            document.getElementById('f-phone').placeholder = isHindi ? "‡§µ‡•ç‡§π‡§æ‡§ü‡•ç‡§∏‡§è‡§™ ‡§®‡§Ç‡§¨‡§∞" : "WhatsApp Number";
            document.getElementById('f-address').placeholder = isHindi ? "‡§ò‡§∞ ‡§ï‡§æ ‡§™‡§§‡§æ ‡§î‡§∞ ‡§≤‡•à‡§Ç‡§°‡§Æ‡§æ‡§∞‡•ç‡§ï" : "Haldwani Address & Landmark";
            document.getElementById('f-submit').innerText = isHindi ? "‡§¨‡•Å‡§ï‡§ø‡§Ç‡§ó ‡§ï‡§®‡•ç‡§´‡§∞‡•ç‡§Æ ‡§ï‡§∞‡•á‡§Ç" : "Confirm Booking";
        }

        setMainService('Electrician');
    </script>
