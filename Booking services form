        let cart = [];
        let curCat = 'Electrician';
        let curSvc = '';
        let isHindi = false;

        function showSection(id) {
            ['hero', 'services', 'partner'].forEach(s => document.getElementById('sec-'+s).classList.add('section-hide'));
            document.getElementById('sec-'+id).classList.remove('section-hide');
            window.scrollTo(0,0);
        }

        function setCategory(cat) {
            curCat = cat;
            document.querySelectorAll('.cat-btn').forEach(b => b.classList.remove('active-tab'));
            document.getElementById('cat-'+cat).classList.add('active-tab');
            const services = [...new Set(db.filter(x => x.Category === cat).map(x => x.Service))];
            curSvc = services[0];
            renderServicePills(services);
            renderGrid();
        }

        function renderServicePills(svcs) {
            const bar = document.getElementById('service-pills');
            bar.innerHTML = svcs.map(s => `
                <button onclick="setService('${s}')" class="whitespace-nowrap px-6 py-2 rounded-full text-[10px] font-black uppercase border border-slate-200 transition-all ${curSvc === s ? 'active-svc' : 'bg-white text-slate-400'}">
                    ${s}
                </button>
            `).join('');
        }

        function setService(s) { curSvc = s; renderServicePills([...new Set(db.filter(x => x.Category === curCat).map(x => x.Service))]); renderGrid(); }

        function renderGrid() {
            const grid = document.getElementById('service-grid');
            const items = db.filter(x => x.Category === curCat && x.Service === curSvc);
            grid.innerHTML = items.map((i, idx) => {
                const sel = cart.some(x => x.Sub_task === i.Sub_task && x.Task === i.Task);
                return `
                    <div onclick="toggleCart(${db.indexOf(i)})" class="bg-white p-6 rounded-[2rem] border-2 cursor-pointer transition-all ${sel ? 'item-selected' : 'border-transparent shadow-sm hover:border-slate-200'}">
                        <p class="text-[8px] font-black text-slate-400 uppercase mb-1">${i.Task}</p>
                        <p class="text-sm font-extrabold text-navy leading-tight mb-4 min-h-[40px]">${i.Sub_task === '-' ? i.Task : i.Sub_task}</p>
                        <div class="flex justify-between items-center">
                            <p class="font-black text-2xl">‚Çπ${i.Price}</p>
                            <span class="text-[9px] font-black uppercase ${sel ? 'text-teal-600' : 'text-slate-300'}">${sel ? '‚úì Added' : 'Add +'}</span>
                        </div>
                    </div>
                `;
            }).join('');
        }

        function toggleCart(idx) {
            const item = db[idx];
            const cIdx = cart.findIndex(x => x.Sub_task === item.Sub_task && x.Task === item.Task);
            if(cIdx > -1) cart.splice(cIdx, 1);
            else cart.push(item);
            updateUI();
            renderGrid();
        }

        function updateUI() {
            const list = document.getElementById('cart-list');
            const totalDisplay = document.getElementById('total-val');
            const bookBtn = document.getElementById('book-trigger');
            if(cart.length === 0) {
                list.innerHTML = `<p class="text-slate-300 italic text-sm text-center py-10">Nothing selected yet</p>`;
                totalDisplay.innerText = '‚Çπ0';
                bookBtn.disabled = true;
                bookBtn.className = "w-full py-5 bg-slate-100 text-slate-400 rounded-2xl font-black uppercase text-xs";
            } else {
                list.innerHTML = cart.map(i => `<div class="flex justify-between items-center bg-slate-50 p-4 rounded-2xl border border-slate-100"><p class="text-[10px] font-black truncate max-w-[70%]">${i.Sub_task === '-' ? i.Task : i.Sub_task}</p><p class="text-xs font-black">‚Çπ${i.Price}</p></div>`).join('');
                const total = cart.reduce((acc, curr) => acc + curr.Price, 0);
                totalDisplay.innerText = '‚Çπ' + total;
                document.getElementById('form-order-data').value = `Total: ‚Çπ${total} | Items: ${cart.map(c => c.Sub_task).join(', ')}`;
                bookBtn.disabled = false;
                bookBtn.className = "w-full py-5 bg-teal-500 text-navy rounded-2xl font-black uppercase text-xs shadow-lg cursor-pointer";
            }
        }

        function toggleServiceView(v) {
            document.getElementById('selection-view').classList.toggle('section-hide', v === 'booking');
            document.getElementById('booking-view').classList.toggle('section-hide', v === 'selection');
            window.scrollTo(0,0);
        }

        function toggleBookingLang() {
            isHindi = !isHindi;
            const btn = document.getElementById('lang-btn');
            btn.innerText = isHindi ? "English ‡§Æ‡•á‡§Ç ‡§¶‡•á‡§ñ‡•á‡§Ç" : "‡§π‡§ø‡§®‡•ç‡§¶‡•Ä ‡§Æ‡•á‡§Ç ‡§¨‡§¶‡§≤‡•á‡§Ç";
            document.getElementById('f-name').placeholder = isHindi ? "‡§Ü‡§™‡§ï‡§æ ‡§®‡§æ‡§Æ" : "Full Name";
            document.getElementById('f-phone').placeholder = isHindi ? "‡§µ‡•ç‡§π‡§æ‡§ü‡•ç‡§∏‡§è‡§™ ‡§®‡§Ç‡§¨‡§∞" : "WhatsApp Number";
            document.getElementById('f-address').placeholder = isHindi ? "‡§π‡§≤‡•ç‡§¶‡•ç‡§µ‡§æ‡§®‡•Ä ‡§ï‡§æ ‡§™‡•Ç‡§∞‡§æ ‡§™‡§§‡§æ (‡§≤‡•à‡§Ç‡§°‡§Æ‡§æ‡§∞‡•ç‡§ï ‡§∏‡§π‡§ø‡§§)" : "Haldwani Address (Landmark, Area)";
            document.getElementById('f-submit').innerText = isHindi ? "‡§¨‡•Å‡§ï‡§ø‡§Ç‡§ó ‡§§‡§Ø ‡§ï‡§∞‡•á‡§Ç" : "Confirm Booking";
        }

        setCategory('Electrician');
    </script>
