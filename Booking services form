        ];

        // State Management
        let cart = [];
        let curCat = 'Electrician';
        let curSvc = '';
        let isHindi = false;
        let searchQuery = '';

        // Initialize
        window.onload = function() {
            setCategory('Electrician');
        };

        // Section Navigation
        function showSection(id) {
            if (id === 'hero') {
                // Go to top
                window.scrollTo({top: 0, behavior: 'smooth'});
            } else {
                // Show the section and scroll to it
                document.getElementById('sec-'+id).classList.remove('section-hide');
                document.getElementById('sec-'+id).scrollIntoView({ behavior: 'smooth', block: 'start' });
            }
        }

        // Smooth scroll to about
        function scrollToAbout() {
            document.getElementById('sec-about').scrollIntoView({ behavior: 'smooth' });
        }

        // Category Selection
        function setCategory(cat) {
            curCat = cat;
            searchQuery = '';
            document.getElementById('service-search').value = '';
            
            // Update active tab
            document.querySelectorAll('.cat-btn').forEach(b => b.classList.remove('active-tab'));
            document.getElementById('cat-'+cat).classList.add('active-tab');
            
            // Get services for category
            const services = [...new Set(db.filter(x => x.Category === cat).map(x => x.Service))];
            curSvc = services[0];
            
            renderServicePills(services);
            renderGrid();
        }

        // Service Pills
        function renderServicePills(svcs) {
            const bar = document.getElementById('service-pills');
            bar.innerHTML = svcs.map(s => `
                <button onclick="setService('${s}')" class="whitespace-nowrap px-6 py-2 rounded-full text-[10px] font-black uppercase border border-slate-200 transition-all ${curSvc === s ? 'active-svc' : 'bg-white text-slate-400 hover:border-navy'}">
                    ${s}
                </button>
            `).join('');
        }

        // Service Selection
        function setService(s) { 
            curSvc = s; 
            searchQuery = '';
            document.getElementById('service-search').value = '';
            renderServicePills([...new Set(db.filter(x => x.Category === curCat).map(x => x.Service))]); 
            renderGrid(); 
        }

        // Search Functionality
        function searchServices() {
            const input = document.getElementById('service-search');
            searchQuery = input.value.toLowerCase().trim();
            
            const clearBtn = document.getElementById('clear-search');
            if (searchQuery) {
                clearBtn.classList.remove('hidden');
            } else {
                clearBtn.classList.add('hidden');
            }
            
            renderGrid();
        }

        function clearSearch() {
            searchQuery = '';
            document.getElementById('service-search').value = '';
            document.getElementById('clear-search').classList.add('hidden');
            renderGrid();
        }

        // Render Service Grid
        function renderGrid() {
            const grid = document.getElementById('service-grid');
            const noResults = document.getElementById('no-results');
            const resultsInfo = document.getElementById('results-info');
            
            let items;
            
            if (searchQuery) {
                // Search across all categories
                items = db.filter(i => 
                    i.Category.toLowerCase().includes(searchQuery) ||
                    i.Service.toLowerCase().includes(searchQuery) ||
                    i.Task.toLowerCase().includes(searchQuery) ||
                    i.Sub_task.toLowerCase().includes(searchQuery)
                );
            } else {
                // Filter by current category and service
                items = db.filter(x => x.Category === curCat && x.Service === curSvc);
            }
            
            if (items.length === 0) {
                grid.classList.add('hidden');
                noResults.classList.remove('hidden');
                resultsInfo.textContent = '';
                return;
            }
            
            grid.classList.remove('hidden');
            noResults.classList.add('hidden');
            
            // Update results info
            if (searchQuery) {
                resultsInfo.textContent = `Found ${items.length} result${items.length !== 1 ? 's' : ''} for "${searchQuery}"`;
            } else {
                resultsInfo.textContent = `${items.length} service${items.length !== 1 ? 's' : ''} available`;
            }
            
            grid.innerHTML = items.map((i, idx) => {
                const sel = cart.some(x => x.Sub_task === i.Sub_task && x.Task === i.Task && x.Category === i.Category);
                const displayText = i.Sub_task === '-' ? i.Task : i.Sub_task;
                
                return `
                    <div onclick="toggleCart(${db.indexOf(i)})" class="bg-white p-6 rounded-[2rem] border-2 cursor-pointer transition-all ${sel ? 'item-selected' : 'border-transparent shadow-sm hover:border-slate-200 hover:shadow-md'}">
                        <div class="flex items-start justify-between mb-2">
                            <p class="text-[8px] font-black text-slate-400 uppercase">${i.Category} ‚Ä¢ ${i.Service}</p>
                            ${sel ? '<span class="text-teal-600 text-xl">‚úì</span>' : ''}
                        </div>
                        <p class="text-[8px] font-bold text-slate-500 uppercase mb-1">${i.Task}</p>
                        <p class="text-sm font-extrabold text-navy leading-tight mb-4 min-h-[40px]">${displayText}</p>
                        <div class="flex justify-between items-center">
                            <p class="font-black text-2xl">‚Çπ${i.Price}</p>
                            <span class="text-[9px] font-black uppercase ${sel ? 'text-teal-600' : 'text-slate-300'}">${sel ? 'Added' : 'Add +'}</span>
                        </div>
                    </div>
                `;
            }).join('');
        }

        // Cart Management
        function toggleCart(idx) {
            const item = db[idx];
            const cIdx = cart.findIndex(x => 
                x.Sub_task === item.Sub_task && 
                x.Task === item.Task && 
                x.Category === item.Category
            );
            
            if(cIdx > -1) {
                cart.splice(cIdx, 1);
            } else {
                cart.push(item);
            }
            
            updateUI();
            renderGrid();
        }

        // Update UI
        function updateUI() {
            const list = document.getElementById('cart-list');
            const totalDisplay = document.getElementById('total-val');
            const bookBtn = document.getElementById('book-trigger');
            
            if(cart.length === 0) {
                list.innerHTML = `
                    <div class="text-center py-10">
                        <p class="text-5xl mb-3">üõí</p>
                        <p class="text-slate-300 italic text-sm">Nothing selected yet</p>
                    </div>
                `;
                totalDisplay.innerText = '‚Çπ0';
                bookBtn.disabled = true;
                bookBtn.className = "w-full py-5 bg-slate-100 text-slate-400 rounded-2xl font-black uppercase text-xs transition cursor-not-allowed";
                bookBtn.innerText = "Select Services First";
            } else {
                list.innerHTML = cart.map((i, index) => `
                    <div class="flex justify-between items-center bg-slate-50 p-4 rounded-2xl border border-slate-100 hover:border-teal-200 transition group">
                        <div class="flex-1 mr-3">
                            <p class="text-[9px] font-bold text-slate-400 uppercase mb-1">${i.Category}</p>
                            <p class="text-[10px] font-black truncate">${i.Sub_task === '-' ? i.Task : i.Sub_task}</p>
                        </div>
                        <div class="flex items-center gap-3">
                            <p class="text-xs font-black">‚Çπ${i.Price}</p>
                            <button onclick="event.stopPropagation(); removeFromCart(${index})" class="text-slate-400 hover:text-red-500 transition opacity-0 group-hover:opacity-100">
                                <span class="text-xs">‚úï</span>
                            </button>
                        </div>
                    </div>
                `).join('');
                
                const total = cart.reduce((acc, curr) => acc + curr.Price, 0);
                totalDisplay.innerText = '‚Çπ' + total;
                
                // Update hidden form fields
                document.getElementById('form-order-data').value = cart.map(c => 
                    `${c.Category}: ${c.Sub_task === '-' ? c.Task : c.Sub_task} (‚Çπ${c.Price})`
                ).join(' | ');
                document.getElementById('form-order-total').value = '‚Çπ' + total;
                
                bookBtn.disabled = false;
                bookBtn.className = "w-full py-5 bg-teal-500 text-navy rounded-2xl font-black uppercase text-xs shadow-lg cursor-pointer hover:bg-teal-400 transition transform hover:scale-[1.02]";
                bookBtn.innerHTML = `Proceed to Book (${cart.length} item${cart.length !== 1 ? 's' : ''})`;
            }
        }

        // Remove from cart
        function removeFromCart(index) {
            cart.splice(index, 1);
            updateUI();
            renderGrid();
        }

        // Toggle View
        function toggleServiceView(v) {
            document.getElementById('selection-view').classList.toggle('section-hide', v === 'booking');
            document.getElementById('booking-view').classList.toggle('section-hide', v === 'selection');
            window.scrollTo(0, 0);
        }

        // Language Toggle
        function toggleBookingLang() {
            isHindi = !isHindi;
            const btn = document.getElementById('lang-btn');
            btn.innerText = isHindi ? "English ‡§Æ‡•á‡§Ç ‡§¶‡•á‡§ñ‡•á‡§Ç" : "‡§π‡§ø‡§®‡•ç‡§¶‡•Ä ‡§Æ‡•á‡§Ç ‡§¨‡§¶‡§≤‡•á‡§Ç";
            
            document.getElementById('f-name').placeholder = isHindi ? "‡§Ü‡§™‡§ï‡§æ ‡§™‡•Ç‡§∞‡§æ ‡§®‡§æ‡§Æ" : "Enter your full name";
            document.getElementById('f-phone').placeholder = isHindi ? "10-‡§Ö‡§Ç‡§ï‡•Ä‡§Ø ‡§µ‡•ç‡§π‡§æ‡§ü‡•ç‡§∏‡§è‡§™ ‡§®‡§Ç‡§¨‡§∞" : "10-digit mobile number";
            document.getElementById('f-address').placeholder = isHindi ? "‡§π‡§≤‡•ç‡§¶‡•ç‡§µ‡§æ‡§®‡•Ä ‡§ï‡§æ ‡§™‡•Ç‡§∞‡§æ ‡§™‡§§‡§æ (‡§≤‡•à‡§Ç‡§°‡§Æ‡§æ‡§∞‡•ç‡§ï ‡§î‡§∞ ‡§è‡§∞‡§ø‡§Ø‡§æ ‡§∏‡§π‡§ø‡§§)" : "Full address in Haldwani (include landmark and area)";
            document.getElementById('f-datetime').placeholder = isHindi ? "‡§ú‡•à‡§∏‡•á: ‡§ï‡§≤ ‡§∏‡•Å‡§¨‡§π 10 ‡§¨‡§ú‡•á ‡§Ø‡§æ 15 ‡§¶‡§ø‡§∏‡§Ç‡§¨‡§∞ 2024, 2 ‡§¨‡§ú‡•á" : "e.g., Tomorrow 10 AM or 15 Dec 2024, 2 PM";
            document.getElementById('f-notes').placeholder = isHindi ? "‡§ï‡•ã‡§à ‡§µ‡§ø‡§∂‡•á‡§∑ ‡§Ü‡§µ‡§∂‡•ç‡§Ø‡§ï‡§§‡§æ ‡§Ø‡§æ ‡§™‡•ç‡§∞‡§∂‡•ç‡§®?" : "Any specific requirements or questions?";
            document.getElementById('f-submit').innerHTML = isHindi ? "‡§¨‡•Å‡§ï‡§ø‡§Ç‡§ó ‡§§‡§Ø ‡§ï‡§∞‡•á‡§Ç" : "Confirm Booking";
        }

        // Form Submissions
        function handleBookingSubmit(event) {
            const submitBtn = document.getElementById('f-submit');
            const spinner = document.getElementById('submit-spinner');
            
            submitBtn.disabled = true;
            spinner.classList.remove('hidden');
            submitBtn.innerHTML = `<span>Submitting...</span><span id="submit-spinner" class="loading-spinner"></span>`;
            
            // Form will submit naturally, this just adds loading state
            return true;
        }

        function handlePartnerSubmit(event) {
            const submitBtn = event.target.querySelector('button[type="submit"]');
            const spinner = document.getElementById('partner-spinner');
            
            submitBtn.disabled = true;
            spinner.classList.remove('hidden');
            
            return true;
        }

        // Update WhatsApp number (replace with actual number)
        document.addEventListener('DOMContentLoaded', function() {
            // You can update the WhatsApp link with actual number
            const whatsappLink = document.querySelector('.whatsapp-float');
            // whatsappLink.href = "https://wa.me/YOUR_ACTUAL_NUMBER?text=Hi%20EzeeClap!%20I%20need%20help%20with%20home%20services";
        });
    </script>
