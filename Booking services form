            { "Category": "Plumber", "Service": "Drainage & blockage", "Task": "Drain blockage removal", "Sub_task": "Toilet pot", "Price": 1299 },
            { "Category": "Plumber", "Service": "Water tank & motor", "Task": "Overhead water tank installation", "Sub_task": "Upto 500L", "Price": 699 },
            { "Category": "Plumber", "Service": "Water tank & motor", "Task": "Overhead water tank installation", "Sub_task": "500 to 2000L", "Price": 1199 },
